{% extends 'admin.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/admin.css')}}" rel="stylesheet" media="all">
{% endblock %}

{% block body %}
	<section class="header mx-5">
		<div class="container mt-4 mb-3">
			<div class="text-center lh-1 mb-2">
				<h4 class="fw-bold">Edit Disount</h4>
			</div>
			<div class="d-flex justify-content-end">
				<span>VESTA</span>
			</div>
		</div>

		<div class="container-boder">
			{{ form_start(formDisc) }}
			<div class="col-md-12">
				<div class="row">
					<div class="row">
						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formDisc.deal) }}
								{{ form_widget(formDisc.deal, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formDisc.percentage) }}
								{{ form_widget(formDisc.percentage, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formDisc.description) }}
								{{ form_widget(formDisc.description, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-12">
							<div class="add mt-3">
								{{form_row(formDisc.save, {'attr':{'class': 'btn btn-dark me-4'}})}}
							</div>
						</div>

						{{ form_end(formDisc) }}
					</div>
				</div>
			</div>
		</div>
	</tbody>
</section>{% endblock %}
