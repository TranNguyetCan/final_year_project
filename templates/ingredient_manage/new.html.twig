{% extends 'admin.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/admin.css')}}" rel="stylesheet" media="all">
{% endblock %}

{% block body %}
	<section class="header mx-5">
		<div class="container mt-4 mb-3">
			<div class="text-center lh-1 mb-2">
				<h4 class="fw-bold">Add new Ingredient</h4>
			</div>
			<div class="d-flex justify-content-end">
				<span>Branch: VESTA</span>
			</div>
		</div>

		<div class="container-boder">
			{{ form_start(formIng) }}
			<div class="col-md-12">
				<div class="row">
					<div class="row">
						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formIng.material) }}
								{{ form_widget(formIng.material, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>


						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formIng.quantity) }}
								{{ form_widget(formIng.quantity, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formIng.unit) }}
								{{ form_widget(formIng.unit, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>
						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formIng.inventory) }}
								{{ form_widget(formIng.inventory, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>
						<div class="col-md-3">
							<div class="forms-inputs mt-2 d-flex">
								<div class="row mt-2">
									{{ form_label(formIng.image, 'Choose Image:', {
									        'label_attr': {'class': 'me-3'}
									    }) }}
									<div class="col-lg-12">
										{{ form_widget(formIng.image, {
									        'attr': {'class': 'me-3'}
                                    }) 
                                    }}
									</div>

								</div>
							</div>
						</div>

						<div class="col-md-12">
							<div class="add mt-3">
								{{form_row(formIng.save, {'attr':{'class': 'btn btn-dark me-4'}})}}
							</div>
						</div>

						{{ form_end(formIng) }}
					</div>
				</div>
			</div>
		</div>
	</tbody>
</section>{% endblock %}
