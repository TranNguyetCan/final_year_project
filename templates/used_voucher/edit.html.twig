{% extends 'admin.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/admin.css')}}" rel="stylesheet" media="all">
{% endblock %}

{% block body %}
	<section class="header mx-5">
		<div class="container mt-4 mb-3">
			<div class="text-center lh-1 mb-2">
				<h4 class="fw-bold">Edit Used Voucher</h4>
			</div>
			<div class="d-flex justify-content-end">
				<span>VESTA</span>
			</div>
		</div>

		<div class="container-boder">
			{{ form_start(formUV) }}
			<div class="col-md-12">
				<div class="row">
					<div class="row">
						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formUV.CusName) }}
								{{ form_widget(formUV.CusName, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formUV.Deal) }}
								{{ form_widget(formUV.Deal, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						  	<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formUV.Voucher) }}
								{{ form_widget(formUV.Voucher, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>
						     
                        <div class="col-md-6">
                            <div class="forms-inputs mt-3">
                                {{ form_label(formUV.UseAt) }}
                                {{ form_widget(formUV.UseAt, {'attr':{'autocomplete': 'off'}}) }}
                            </div>
                        </div>

						<div class="col-md-12">
							<div class="add mt-3">
								{{form_row(formUV.save, {'attr':{'class': 'btn btn-dark me-4'}})}}
							</div>
						</div>

						{{ form_end(formUV) }}
					</div>
				</div>
			</div>
		</div>
	</tbody>
</section>{% endblock %}
